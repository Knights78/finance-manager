<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Finance management</title>
    <link rel="stylesheet" href="../public/transactions.css">
</head>
<body>
    <div class="container">
        <nav class="navbar">
            <div class="profile">
                <!-- <img src="" alt="proflie photo"> -->
                <h3>{{user.username}}</h3>
            </div>
            <ul>
                <li><a href="/dashboard">Dashboard</a></li>
                <li><a href="/expenses">All Transactions</a></li>
                <li><a href="/income">Incomes</a></li>
                <li><a href="/expenses">Expenses</a></li>
                <li>View Transactions</li>
              </ul>
              <button id="signout">Sign Out</button>
        </nav>
        <div class="content">
            <div class="header">
                <h1>All transactions</h1>
            </div>
            <div class="graph">
                <h2>Graph</h2>
                <!-- Add graph or table here -->
                <canvas id="myChart" width="400" height="200"></canvas>
            </div>
             <div class="pie-chart">
                <h2>Expense Distribution</h2>
                <canvas id="expenseChart" width="400" height="200"></canvas>
               
            </div>
            <div class="summary">
                <div class="summary-item" >
                    <h2>Total Income</h2>  
                    <h2>{{totalIncome}}</h2>                  
                </div>
                <div class="summary-item" >
                    <h2>Total Expenses</h2>
                    <h2>{{totalExpense}}</h2>
                </div>
                <div class="summary-item">
                    <h2>Total Balance</h2>
                    <h2>{{totalBalance}}</h2>
                </div>
            </div>
            
            <div class="transactions">
                <h2>Recent Transactions</h2>
                 <h2>RECENT INCOME: TITLE:{{recentIncomeTitle}} AMOUNT:{{recentIncomeAmount}}</h2>
                 <h2>RECENT EXPENSE: TITLE:{{recentExpenseTitle}} AMOUNT:{{recentExpenseAmount}}</h2>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
    const ctx = document.getElementById('myChart').getContext('2d');
    const myChart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: ['Day 1', 'Day 2', 'Day 3', 'Day 4', 'Day 5', 'Day 6', 'Day 7'],
            datasets: [{
                label: 'Income',
                data: {{ incomeData }},
                borderColor: 'green',
                borderWidth: 3,
                fill: false
            }, {
                label: 'Expenses',
                data: {{ expenseData }},
                borderColor: 'red',
                borderWidth: 4,
                fill: false
            }]
        },
        options: {
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero: true
                    }
                }]
            }
        }
    });
     const data = {
    labels: {{{pieChartLabels}}},
    datasets: [{
      data: {{{pieChartData}}},
      backgroundColor: [
        'red',
        'blue',
        'green',
        'yellow'
      ],
      borderColor: 'transparent',
      hoverBorderColor: 'transparent'
    }]
  };

  // Initialize the chart
  const ctxExpense = document.getElementById('expenseChart').getContext('2d');
  const expenseChart = new Chart(ctxExpense,{
    type: 'pie',
    data: data,
    options: {
      responsive: false,
      maintainAspectRatio: false,
      cutoutPercentage: 70,
      plugins: {
        tooltip: {
          callbacks: {
            label: function(context) {
              const label = context.label;
              const value = context.raw;
              const total = data.datasets[0].data.reduce((a, b) => a + b, 0);
              const percentage = (value / total) * 100;
              return `${label}: ${percentage.toFixed(1)}%`;
            }
          }
        }
      }
    }
  });
    
   
    </script>
  
</body>
</html>
